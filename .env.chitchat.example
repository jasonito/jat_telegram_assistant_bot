# ==============================
# Profile / Runtime
# This file is for the chitchat bot profile (chat + transcribe + notion).
# ==============================
APP_MODULE=app_chitchat
APP_PROFILE=chitchat
DATA_DIR=C:\Users\User\jat_telegram_assistant_bot\chitchat

# ==============================
# Telegram Core
# Bot token and runtime transport.
# ==============================
TELEGRAM_BOT_TOKEN=replace_me
TELEGRAM_ALLOWED_GROUPS=financialTimesJournal
TELEGRAM_LONG_POLLING=0
TELEGRAM_LOCAL_WEBHOOK_URL=http://127.0.0.1:8001/telegram

# Telegram network resiliency (optional tuning)
TELEGRAM_FILE_FETCH_RETRIES=4
TELEGRAM_FILE_FETCH_CONNECT_TIMEOUT=5
TELEGRAM_FILE_FETCH_READ_TIMEOUT=12
TELEGRAM_FILE_FETCH_RETRY_DELAY_SECONDS=0.25
TELEGRAM_POLL_TIMEOUT_SECONDS=20
TELEGRAM_POLL_CONNECT_TIMEOUT_SECONDS=10
TELEGRAM_POLL_READ_TIMEOUT_SECONDS=35
TELEGRAM_POLL_ERROR_BACKOFF_BASE_SECONDS=2
TELEGRAM_POLL_ERROR_BACKOFF_MAX_SECONDS=20

# ==============================
# Feature Flags
# Chitchat defaults: transcribe on, news off.
# ==============================
FEATURE_NEWS_ENABLED=0
FEATURE_TRANSCRIBE_ENABLED=1
FEATURE_TRANSCRIBE_AUTO_URL=1
FEATURE_OCR_ENABLED=1
FEATURE_OCR_CHOICE_ENABLED=1
FEATURE_SLACK_ENABLED=0

# OCR per-image choice behavior
OCR_CHOICE_SCOPE=private
OCR_CHOICE_TIMEOUT_SECONDS=60
OCR_CHOICE_TIMEOUT_DEFAULT=skip

# Transcribe progress heartbeat seconds
TRANSCRIBE_PROGRESS_HEARTBEAT_SECONDS=30

# ==============================
# Transcription Engine (Whisper / ffmpeg)
# Quality-speed-memory knobs for transcription.
# ==============================
TRANSCRIBE_MAX_DURATION_SECONDS=10800
TRANSCRIBE_CHUNK_MINUTES=25
TRANSCRIBE_CHECKPOINT_FLUSH_SECONDS=30
WHISPER_MODEL=base
WHISPER_LANGUAGE=auto
WHISPER_BEAM_SIZE=5
WHISPER_COMPUTE_TYPE=int8
WHISPER_CPU_THREADS=0
WHISPER_BATCH_SIZE=16
FFMPEG_LOCATION=

# ==============================
# OCR Provider
# Google Vision credentials + language hints.
# ==============================
OCR_PROVIDER=google_vision
OCR_LANG_HINTS=zh-TW,en
GOOGLE_APPLICATION_CREDENTIALS=

# ==============================
# News Collection / Digest
# Keep these values only if you might enable news later.
# ==============================
NEWS_ENABLED=0
NEWS_FETCH_INTERVAL_MINUTES=180
NEWS_PUSH_ENABLED=0
NEWS_PUSH_MAX_ITEMS=10
NEWS_GNEWS_QUERY=site:reuters.com semiconductors technology
NEWS_GNEWS_HL=en-US
NEWS_GNEWS_GL=US
NEWS_GNEWS_CEID=US:en
NEWS_RSS_URLS=
NEWS_RSS_URLS_FILE=
NEWS_URL_FETCH_MAX_ARTICLES=3
NEWS_URL_FETCH_MAX_CHARS=3000
NEWS_URL_FETCH_TIMEOUT_SECONDS=6
NEWS_DIGEST_MAX_ITEMS=6
NEWS_DIGEST_AI_ITEMS=2
NEWS_DIGEST_FETCH_ARTICLE_ITEMS=1
NOTE_DIGEST_MAX_ITEMS=5

# ==============================
# AI Summary Provider
# Shared AI settings for /summary and transcript summary.
# ==============================
AI_SUMMARY_ENABLED=0
AI_SUMMARY_PROVIDER=openai
AI_SUMMARY_TIMEOUT_SECONDS=20
AI_SUMMARY_MAX_CHARS=6000
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini
OPENAI_TIMEOUT_SECONDS=20
GEMINI_API_KEY=
GEMINI_MODEL=gemini-1.5-flash
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-3-5-haiku-latest
HUGGINGFACE_API_KEY=
HUGGINGFACE_MODEL=openai/gpt-oss-120b
HUGGINGFACE_BASE_URL=https://router.huggingface.co/v1
OLLAMA_BASE_URL=http://127.0.0.1:11434
OLLAMA_MODEL=qwen2.5:7b

# ==============================
# Dropbox Sync
# Bidirectional sync of notes/images and transcript import.
# ==============================
DROPBOX_ACCESS_TOKEN=
DROPBOX_REFRESH_TOKEN=
DROPBOX_APP_KEY=
DROPBOX_APP_SECRET=
DROPBOX_TOKEN_REFRESH_LEEWAY_SECONDS=300
DROPBOX_ROOT_PATH=/read & chat/chitchat
DROPBOX_SYNC_ENABLED=1
DROPBOX_SYNC_TIME=00:10
DROPBOX_SYNC_TZ=Asia/Taipei
DROPBOX_SYNC_ON_STARTUP=1
DROPBOX_TRANSCRIPTS_PATH=/Transcripts
DROPBOX_TRANSCRIPTS_SYNC_ENABLED=1

# ==============================
# Notion (chitchat primary)
# Chitchat messages/images/transcripts can be appended to Notion.
# ==============================
NOTION_ENABLED=1
NOTION_TOKEN=
NOTION_VERSION=2022-06-28
NOTION_CHATLOG_YEAR_PAGES_JSON={"2026":"replace_with_page_id"}
NOTION_CHATLOG_FALLBACK_PAGE_ID=
NOTION_CHATLOG_IMAGE_MODE=link
NOTION_CHATLOG_OCR_MODE=optional
NOTION_CHATLOG_INCLUDE_TIME=0

# ==============================
# Slack (optional)
# Enable only if you use Slack Socket Mode.
# ==============================
SLACK_BOT_TOKEN=
SLACK_APP_TOKEN=
SLACK_USER_ID=
SLACK_DEBUG=0
